<%- include _head %>
<%- include _navigation %>
<div class="post block-body column three-fourths">
  <article class="clearfix">
    <form method="post">
      <header>
        <h2>
          <input type="text" placeholder="中文标题" name="title" value="测试标题"/>
          <input type="text" placeholder="路由地址" name="name" value="testroute"/>
        </h2>
      </header>
      <div class="article-meta clearfix">
        <time class="left">
          <input type="text" placeholder="日期(yyyy/MM/dd hh:mm:ss)" name="date" value="2015/10/07 19:15:12"/>
        </time>

        <div class="one-third tags right clearfix">
          <label>
            <input type="checkbox" value="newtags" name="tags" />
            <span>新增</span>
          </label>
          <% if(typeof tags != 'undefined'){ %>
            <% for(var i=0;i<tags.length;i++){ %>
              <label for="tag_<%= tags[i].tag %>">
                <input id="tag_<%= tags[i].tag %>" type="checkbox" value="<%= tags[i].tag %>" name="tags" />
                <span><%= tags[i].tagName %></span>
              </label>
            <% } %>
          <% } %>
          <input type="text" class="right" name="newtags" value="tag1:标签1,tag2:标签2,tag3:标签3">
        </div>

      </div>

      <div class="markdown-body">
        <textarea name="post">测试内容#水电费</textarea>
      </div>
      <button type="submit" class="right">发布</button>
    </form>
  </article>
</div>
<%- include _sidebar %>